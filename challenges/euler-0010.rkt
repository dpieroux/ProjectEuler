#lang racket/base

(provide test solve)

(require "../lib/prime-gen2.rkt")


;;;---------------------------------------------------------------------------------------------------
;;; Solution
;;;---------------------------------------------------------------------------------------------------

(define (euler n)
  (let ([gen (make-prime-gen)])
    (let loop ([s   0]
               [p (gen 'next)])
      (if (< p n)
          (loop (+ s p) (gen 'next))
          s))))


