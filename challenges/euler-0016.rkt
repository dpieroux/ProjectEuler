#lang racket/base

(provide test solve)

(require "../lib/base.rkt")


;;;---------------------------------------------------------------------------------------------------
;;; Solution
;;;---------------------------------------------------------------------------------------------------

(define (euler n) 
    (apply + (digits (expt 2 n))))


