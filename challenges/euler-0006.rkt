#lang racket/base

(provide test solve)


;;;---------------------------------------------------------------------------------------------------
;;; Solution
;;;---------------------------------------------------------------------------------------------------

(define (euler n)
  (/ (* n (sub1 (* n n)) (+ (* 3 n) 2)) 12))


